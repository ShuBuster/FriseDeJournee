<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="translucide">
        <item name="android:background">@color/translucide</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@style/lightTextShadow">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/jaune1</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:typeface">serif</item>
    </style>

    <style name="topPannel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blanc_casse</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="bottomPannel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/blanc_casse</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="wrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="textShadow" parent="@style/wrapped">
        <item name="android:shadowColor">@color/noir</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">7</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
        <style name="lightTextShadow" parent="@style/wrapped">
        <item name="android:shadowColor">@color/noir</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>