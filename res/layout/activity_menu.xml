<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple6"
    android:clipChildren="false"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/logo_bouton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/logo_app"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/slide_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanc_casse"
        android:elevation="20dp"
        android:paddingBottom="10dp"
        android:visibility="invisible" >

        <LinearLayout
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="110dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/texte_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titre"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="-MENU- "
            android:textColor="@color/blue4"
            android:textSize="50sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slide_bottom"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/blanc_casse"
        android:elevation="1dp"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/jeSuis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:text="@string/jeSuis"
            android:textColor="@color/fushia"
            android:textSize="40sp" />

        <Spinner
            android:id="@+id/enfant_spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jeSuis"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/orange1"
            android:popupBackground="@color/orange2" />

        <TextView
            android:id="@+id/sous_titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
			android:layout_below="@id/enfant_spinner"
			android:layout_marginTop="50dp"
            android:paddingEnd="3dp"
            android:text="Que veux-tu faire ?"
            android:textColor="@color/fushia"
            android:textSize="40sp" />

        <Button
            android:id="@+id/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sous_titre"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:elevation="15dp"
            android:paddingBottom="5dp"
            android:shadowColor="@color/noir"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="@string/bouton_regarder"
            android:textAllCaps="false"
            android:textColor="@color/jaune1"
            android:textSize="50sp" />

        <Button
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/go"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:elevation="15dp"
            android:shadowColor="@color/noir"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="Quitter"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/gnar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/gnar" />

        <ImageView
            android:id="@+id/baby_gnar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/baby_gnar" />
    </RelativeLayout>

</RelativeLayout>